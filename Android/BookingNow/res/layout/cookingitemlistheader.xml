<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/common_background">
    
	    <TextView android:id="@+id/nametitle"
	        android:layout_width="250dp"
	        android:layout_height="40dp"
	        android:textAppearance="@android:style/TextAppearance.Medium"
	        android:gravity="center"
	        android:layout_alignParentLeft="true"
	        android:marqueeRepeatLimit="marquee_forever"
			android:ellipsize="marquee"
	        android:singleLine="true"
	        android:textColor="@android:color/white"/>
	    <TextView android:id="@+id/quantitytitle"
	        android:layout_width="50dp"
	        android:layout_height="40dp"
	        android:textAppearance="@android:style/TextAppearance.Medium"
	        android:gravity="center"
	        android:layout_toRightOf="@+id/nametitle"
	        android:singleLine="true"
	        android:textColor="@android:color/white"/>
	    <TextView android:id="@+id/timertitle"
	        android:gravity="center"
	        android:layout_width="150dp"
	        android:layout_height="40dp"
	        android:layout_toRightOf="@+id/quantitytitle"
	        android:textAppearance="@android:style/TextAppearance.Medium"
	        android:singleLine="true"
	        android:textColor="@android:color/white"/>
	    <TextView android:id="@+id/statustitle"
	        android:layout_width="150dp"
	        android:gravity="center"
	        android:layout_height="40dp"
	        android:layout_toRightOf="@+id/timertitle"
	        android:textAppearance="@android:style/TextAppearance.Medium"
	        android:singleLine="true"
	        android:textColor="@android:color/white"/>
	    <TextView android:id="@+id/operationstitle"
	        android:layout_width="match_parent"
	        android:gravity="center"
	        android:layout_height="40dp"
	        android:layout_toRightOf="@+id/statustitle"
	        android:textAppearance="@android:style/TextAppearance.Medium"
	        android:singleLine="true"
	        android:textColor="@android:color/white"/>
</RelativeLayout>
