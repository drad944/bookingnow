<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fooditemdetail"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/common_background">
 
        <TextView android:id="@+id/name"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center|left"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:marqueeRepeatLimit="marquee_forever"
   			android:ellipsize="marquee"
   			android:focusable="true"
   			android:focusableInTouchMode="true"
            android:textColor="@android:color/white"/>
        <TextView android:id="@+id/foodstatus"
            android:gravity="center|right"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/name"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:singleLine="true"
            android:textColor="@android:color/white"/>
        <TextView android:id="@+id/freestatus"
            android:layout_width="50dp"
            android:gravity="center|right"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/totalprice"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:singleLine="true"
            android:textColor="@android:color/white"/>
        <TextView android:id="@+id/totalprice"
            android:layout_width="95dp"
            android:gravity="center|right"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/freebtn"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:singleLine="true"
            android:textColor="@android:color/white"/>
        <Button android:id="@+id/freebtn"
            android:layout_width="100dp"
            android:gravity="center"
            android:text="@string/freebtn"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:singleLine="true"
            android:focusable="false"
            android:textColor="@android:color/white"/>

</RelativeLayout>
