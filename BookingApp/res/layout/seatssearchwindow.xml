<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_background">
    
    <LinearLayout
        android:id="@+id/searchlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
    	    android:layout_width="match_parent"
        	android:layout_height="50dp"
        	android:gravity="center"
        	android:orientation="horizontal">
	        <TextView
			    android:layout_width="120dp"
			    android:layout_height="match_parent" 
			    android:text="@string/peoplecount"  
			    android:gravity="center"
			    android:textAppearance="?android:attr/textAppearanceMedium">  
	    	</TextView> 
	        <EditText
		        android:id="@+id/peoplecount"  
		        android:layout_height="match_parent"
		        android:layout_width="150dp"
		        android:gravity="fill_horizontal"
		        android:inputType="number"
		        android:textAppearance="?android:attr/textAppearanceMedium">  
	    	</EditText>
    	</LinearLayout>
    	<TextView
    	    android:id="@+id/seatavailable"
		    android:layout_width="wrap_content"
		    android:layout_height="50dp" 
		    android:text="@string/seatavailable"
		    android:textColor="@color/green"
		    android:gravity="center"
		    android:textAppearance="?android:attr/textAppearanceMedium">  
	    </TextView>
    	<LinearLayout
    	    android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:gravity="center|bottom"
        	android:orientation="horizontal">
	    	<Button android:id="@+id/search"
	            android:layout_width="60dp"
	            android:layout_height="50dp"
	            android:text="@string/searchbtn"
	            android:textAppearance="@android:style/TextAppearance.Medium"/>
    	</LinearLayout>
    </LinearLayout>
    
	<LinearLayout 
        android:id = "@+id/bookinglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    	<LinearLayout 
    	    android:layout_width="match_parent"
        	android:layout_height="50dp"
        	android:gravity="center"
        	android:orientation="horizontal">
    	    <TextView
			    android:layout_width="120dp"
			    android:layout_height="match_parent"
			    android:layout_gravity="left"
			    android:text="@string/customername"  
			    android:gravity="center"
			    android:textAppearance="?android:attr/textAppearanceMedium">  
    		</TextView>
        	<EditText
		        android:id="@+id/customername"  
		        android:layout_height="match_parent"
		        android:layout_width="150dp"
		        android:gravity="fill_horizontal"
		        android:layout_gravity="right"
		        android:inputType="text"
		        android:textAppearance="?android:attr/textAppearanceMedium">  
    		</EditText>
    	</LinearLayout>
    	<LinearLayout 
    	    android:layout_width="match_parent"
        	android:layout_height="50dp"
        	android:gravity="center"
        	android:orientation="horizontal">
    	    <TextView
			    android:layout_width="120dp"
			    android:layout_height="match_parent"
			    android:layout_gravity="left"
			    android:text="@string/phonenumber"  
			    android:gravity="center"
			    android:textAppearance="?android:attr/textAppearanceMedium">  
    		</TextView>
    		<EditText
		        android:id="@+id/phonenumber"
		        android:layout_height="match_parent"
		        android:layout_width="150dp"
		        android:gravity="fill_horizontal"
		        android:layout_gravity="right"
		        android:inputType="phone"
		        android:textAppearance="?android:attr/textAppearanceMedium">  
    		</EditText>
    	</LinearLayout>
    	<LinearLayout
    	    android:layout_width="match_parent"
        	android:layout_height="50dp"
        	android:gravity="center"
        	android:orientation="horizontal">
    	    <TextView
			    android:layout_width="120dp"
			    android:layout_height="match_parent"
			    android:layout_gravity="left"
			    android:text="@string/peoplecount"  
			    android:gravity="center"
			    android:textAppearance="?android:attr/textAppearanceMedium">  
    		</TextView>
        	<EditText
		        android:id="@+id/bookingpeoplecount"	        
		        android:layout_height="match_parent"
		        android:layout_width="150dp"
		        android:gravity="fill_horizontal"
		        android:layout_gravity="right"
		        android:inputType="number"
		        android:textAppearance="?android:attr/textAppearanceMedium">  
    		</EditText>
    	</LinearLayout>

    	<LinearLayout 
    	    android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:gravity="center|bottom"
        	android:orientation="horizontal">
			<Button android:id="@+id/bookingbtn"
	            android:layout_width="wrap_content"
	            android:layout_height="50dp"
	            android:layout_gravity="center"
	            android:text="@string/bookingbtn"
	            android:textAppearance="@android:style/TextAppearance.Medium"/>
	    	<Button android:id="@+id/cancel"
	            android:layout_width="60dp"
	            android:layout_height="50dp"
	            android:text="@string/cancel"
	            android:textAppearance="@android:style/TextAppearance.Medium"/>
    	</LinearLayout>
    </LinearLayout>
	
</LinearLayout>
