<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pitaya.bookingnow.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk 
        android:minSdkVersion="15"
        android:targetSdkVersion="15"/>
	<uses-permission android:name="android.permission.INTERNET" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.pitaya.bookingnow.app.HomeActivity"
            android:label="@string/app_name"
            android:configChanges="screenSize|orientation"
            >
            <!-- android:configChanges="screenSize|orientation" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".PopUpViewer" android:theme="@style/PopupViewerStyle"></activity>
        <activity android:name=".FoodBookActivity"></activity>
        <provider
      		android:name=".service.FoodMenuContentProvider"
      		android:authorities="com.pitaya.bookingnow.food.contentprovider" >
   		</provider>
    </application>

</manifest>
