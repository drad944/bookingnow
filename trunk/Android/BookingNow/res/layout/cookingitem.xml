<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fooditemdetail"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background">
 
        <TextView android:id="@+id/name"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="left|center"
            android:padding="5dp"
            android:layout_alignParentLeft="true"
            android:marqueeRepeatLimit="marquee_forever"
   			android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@android:color/white"/>
        <TextView android:id="@+id/quantity"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center"
            android:layout_toRightOf="@+id/name"
            android:singleLine="true"
            android:textColor="@android:color/white"/>
        <TextView android:id="@+id/timer"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/quantity"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:singleLine="true"
            android:textColor="@android:color/white"/>
        <TextView android:id="@+id/foodstatus"
            android:layout_width="150dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/timer"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:singleLine="true"
            android:textColor="@android:color/white"/>
        <LinearLayout
            	android:layout_toRightOf="@+id/foodstatus"
            	android:layout_width="match_parent"
            	android:layout_height="40dp"
            	android:gravity="center">
	            <Button
	                android:id="@+id/unavailablebtn"
		            android:layout_width="100dp"
		            android:gravity="center"
		            android:layout_height="40dp"
		            android:textAppearance="@android:style/TextAppearance.Medium"
		            android:text="@string/foodunavailablebtn"
		            android:singleLine="true"
		            android:textColor="@android:color/white"/>
		        <Button
		            android:id="@+id/updatestatusbtn"
		            android:layout_width="100dp"
		            android:gravity="center"
		            android:layout_height="40dp"
		            android:textAppearance="@android:style/TextAppearance.Medium"
		            android:singleLine="true"
		            android:textColor="@android:color/white"/>
        </LinearLayout>


</RelativeLayout>
